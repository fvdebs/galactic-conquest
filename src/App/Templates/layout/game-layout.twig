{% extends "@App/layout/page-layout.twig" %}

{% block body %}
    {% include '@App/layout/partial/game-navigation-top.twig' %}

    <section class="section custom-duration-200 has-margin" off-canvas="id-1 left push">
        {% include '@App/layout/partial/game-navigation-left.twig' %}
    </section>

    <section class="section" canvas="container" id="sidebar-content-wrapper">
        <div class="columns">
            <div class="column is-one-fifth is-hidden-touch">
                {% include '@App/layout/partial/game-navigation-left.twig' %}
            </div>
            <div class="column is-four-fifth">
                {% block content %}{% endblock %}
            </div>
        </div>
        {% include '@App/layout/partial/footer.twig' %}
    </section>
{% endblock %}

{% block style %}
    <link rel="stylesheet" href="/assets/css/slidebars.min.css">
{% endblock %}

{% block script %}
    <script src="/assets/js/slidebars.min.js"></script>
    <script src="/assets/js/gc.js?55"></script>
{% endblock %}
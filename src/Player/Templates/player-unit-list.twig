{% extends "@App/layout/game-layout.twig" %}

{% block content %}
    <div class="container">
        {% include "@App/layout/partial/breadcrumb.twig"
            with {
                'items': [
                    {'name': currentUniverse.getName, 'url': url('player.overview'), 'icon': 'fas fa-atom has-text-primary'},
                    {'name': 'unit.production', 'icon': 'fas fa-industry has-text-primary'},
                ]
            }
        %}

        {% if flyableBuildableUnits | length > 0 %}
            <h2 class="title is-5 has-margin has-text-centered">{{ 'unit.shipyard' | trans }}</h2>
            {% include "@Player/partial/player-form-unit-build.twig"
                with {
                    'units': flyableBuildableUnits,
                }
            %}
        {% endif %}

        {% if stationaryBuildableUnits | length > 0 %}
            <h2 class="title is-5 has-margin has-text-centered">{{ 'unit.defense' | trans }}</h2>
            {% include "@Player/partial/player-form-unit-build.twig"
                with {
                    'units': stationaryBuildableUnits,
                }
            %}
        {% endif %}
    </div>
{% endblock %}

{% extends "@App/layout/account-layout.twig" %}

{% block content %}
    <div class="container">
        <div class="columns is-centered">
            <div class="column is-half">
                {% include "@App/layout/partial/breadcrumb.twig"
                    with {
                        'items': [
                            {'name': 'app.home', 'url': url('universe.select'), 'icon': 'fas fa-home has-text-primary'},
                            {'name': 'universe.register.for' | trans | format(universe.getName), 'icon': 'fas fa-atom has-text-primary'},
                        ]
                    }
                %}

                {% include "@App/layout/partial/page-title.twig"
                        with {
                        'title': universe.getName,
                        'subtitle': 'universe.register' | trans,
                    }
                %}

                <form action="{{ url('universe.register.save') }}" method="post">
                    <div class="field">
                        <label class="label">{{ 'universe.register.galaxy' | trans }}</label>
                        <div class="control">
                            <label class="radio">
                                <input type="radio" name="galaxyType" value="new">
                                {{ 'universe.register.galaxy.new' | trans }}
                            </label><br>
                            <label class="radio">
                                <input type="radio" name="galaxyType" value="public">
                                {{ 'universe.register.galaxy.random' | trans }}
                            </label><br>
                            <label class="radio">
                                <input type="radio" name="galaxyType" value="private">
                                {{ 'universe.register.galaxy.password' | trans }}
                            </label>
                        </div>
                    </div>

                    <div class="field">
                        <label class="label">{{ 'universe.password' | trans }}</label>
                        <div class="control">
                            <input type="password" name="password" class="input" placeholder="{{ 'universe.password' | trans }}">
                        </div>
                    </div>

                    <div class="notification">
                        <h3 class="title">{{ 'universe.rules' | trans }}</h3>
                        <p>{{ 'universe.rule.first' | trans }}</p>
                        <p>{{ 'universe.rule.second' | trans }}</p>
                        <p>{{ 'universe.rule.third' | trans }}</p>
                    </div>

                    <div class="field">
                        <div class="control">
                            <label class="checkbox">
                                <input type="checkbox" name="rules">
                                {{ 'universe.rules.check' | trans }}
                            </label>
                        </div>
                    </div>

                    <div class="field">
                        <div class="control">
                            <button type="submit" class="button is-primary is-fullwidth">{{ 'universe.register' | trans }}</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

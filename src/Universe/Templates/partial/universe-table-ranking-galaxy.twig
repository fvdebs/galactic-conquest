<table class="table is-narrow is-fullwidth">
    <tbody>
        <tr>
            <td>{{ 'universe.ranking.galaxy.ranking' | trans }}</td>
            <td>{{ 'universe.ranking.galaxy.id' | trans }} </td>
            <td>{{ 'universe.ranking.galaxy.average' | trans }} </td>
            <td>{{ 'universe.ranking.galaxy.members' | trans }} </td>
            <td>{{ 'universe.ranking.galaxy.alliance' | trans }} </td>
        </tr>
        {% for galaxy in galaxyRankings %}
            <tr>
                <td>{{ galaxy.getRankingPosition }}</td>
                <td>{{ galaxy.getNumber }}</td>
                <td>{{ galaxy.getAveragePoints | number }}</td>
                <td>{{ galaxy.getPlayerCount }}</td>
                <td>
                    {% if galaxy.hasAlliance %}
                        {{ galaxy.getAlliance.getCode }}
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>